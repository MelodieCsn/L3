package Expressions;

public class ExpressionComplexe {
	private Constante a;
	private char op;
	private Constante b;
	
	public ExpressionComplexe(Constante a, char op, Constante b){
		this.a=a;
		this.b=b;
		this.op=op;
	}
	
	public String toString(){
		return a.toString()+op+b.toString();
	}
	public double eval(){
		double res = 0;
		switch (op) {
		case '+':
			res=a.getNb()+b.getNb();
			break;
		case '-':
			res=a.getNb()-b.getNb();
			break;
		case '*':
			res=a.getNb()*b.getNb();
			break;
		case '/':
			res=a.getNb()/b.getNb();
			break;

		default:
			break;
		}
		return res;
	}

	public Constante getA() {
		return a;
	}

	public void setA(Constante a) {
		this.a = a;
	}

	public char getOp() {
		return op;
	}

	public void setOp(char op) {
		this.op = op;
	}

	public Constante getB() {
		return b;
	}

	public void setB(Constante b) {
		this.b = b;
	}
}
